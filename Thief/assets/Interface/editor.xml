<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nifty>
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	<screen id="start" controller="editor.EditorTerrain">
		<layer childLayout="center" id="layer">
			<panel id="centralPanel" childLayout="horizontal">
				<panel id="leftPanel" width="20%" height="98%" childLayout="vertical" x="1%"
					backgroundImage="Interface/blackBar.png">
					<panel id="currentModel" width="100%" height="30%"
						childLayout="vertical">
						<panel id="spaceCurrentModel" height="2%" />
						<control font="Interface/Fonts/Morpheus.fnt" color="#ee1f"
							id="NameModel" name="label" text="Model: nobody" valign="center" />
						<control font="Interface/Fonts/Morpheus.fnt" color="#ee1f"
							id="rotate" name="label" text="rotate:" />
						<control id="sliderRotate" name="horizontalSlider" width="80%" />
						<panel id="buttonCurrentModel" width="100%" childLayout="horizontal">
							<image filename="Interface/deleteButton.png" id="deleteButton"
								width="50%" height="40%" x="2%" visibleToMouse="true">
								<effect>
									<onStartHover name="nop" onStartEffect="startGrow(deleteButton)" />
									<onEndHover name="nop" onStartEffect="endGrow(deleteButton)" />
								</effect>
								<interact onClick="delete()" />
							</image>
							<image filename="Interface/resetButton.png" id="resetButton"
								width="50%" height="40%" visibleToMouse="true">
								<effect>
									<onStartHover name="nop" onStartEffect="startGrow(resetButton)" />
									<onEndHover name="nop" onStartEffect="endGrow(resetButton)" />
								</effect>
								<interact onClick="reset()" />
							</image>
						</panel>
					</panel>
					<panel id="loadTerrain" width="100%" height="30%" childLayout="vertical">
							<control font="Interface/Fonts/Morpheus.fnt" id="terrainFileToLoad" name="label" text="Terrain to load: " color="#ee1f" />
							<control id="listBox" name="listBox" width="90%" height="80%" align="center"/>
							<panel id="buttonloadTerrain" width="100%" childLayout="horizontal">
								<image filename="Interface/loadButton.png" id="loadButton"
									width="50%" height="40%" x="2%" visibleToMouse="true">
									<effect>
										<onStartHover name="nop" onStartEffect="startGrow(loadButton)" />
										<onEndHover name="nop" onStartEffect="endGrow(loadButton)" />
									</effect>
									<interact onClick="load()" />
								</image>
								<image filename="Interface/resetButton.png" id="deleteButton"
									width="50%" height="40%" visibleToMouse="true">
									<effect>
										<onStartHover name="nop" onStartEffect="startGrow(deleteButton)" />
										<onEndHover name="nop" onStartEffect="endGrow(deleteButton)" />
									</effect>
									<interact onClick="reset()" />
								</image>
							</panel>			
					</panel>
					<panel id="saveTerrain" width="100%" height="25%" childLayout="vertical">
						<control font="Interface/Fonts/Morpheus.fnt" id="terrainFileToSave" name="label" text="Tearrain to save: " color="#ee1f" />
						<control id="textfieldSaveTerrain" name="textfield" width="80%" align="center" />
						<image filename="Interface/saveButton.png" id="saveButton"	width="50%" height="40%" visibleToMouse="true" align="center">
							<effect>
								<onStartHover name="nop" onStartEffect="startGrow(saveButton)" />
								<onEndHover name="nop" onStartEffect="endGrow(saveButton)" />
							</effect>
							<interact onClick="save()" />
						</image>
					</panel> 
					<panel id="return" width="100%" height="25%" childLayout="vertical">
						<image filename="Interface/returnButton.png" id="returnButton"	width="50%" height="40%" visibleToMouse="true" align="center">
							<effect>
								<onStartHover name="nop" onStartEffect="startGrow(returnButton)" />
								<onEndHover name="nop" onStartEffect="endGrow(returnButton)" />
							</effect>
							<interact onClick="closeEditor()" />
						</image>
					</panel>
				</panel>
				<panel id="upPanel"  height="15%" backgroundImage="Interface/blackBar.png" childLayout="vertical">
					
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>
