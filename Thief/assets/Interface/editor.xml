<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nifty>
  <useStyles filename="nifty-default-styles.xml"/>
  <useControls filename="nifty-default-controls.xml"/>
  <screen id="start" controller="editor.EditorTerrain">
    <layer childLayout="absolute" id="layer0">
      <panel childLayout="absolute" height="200px" id="modifyCurrentSpatial" style="nifty-panel" width="253px" y="3%">
	    <control font="aurulent-sans-16.fnt" height="50px" id="NameModel" name="label" text="Model: nobody" width="100px" x="28%" y="0.01%"/>
	    <control font="aurulent-sans-16.fnt" height="50px" id="rotate" name="label" text="rotate:" width="100px"  y="17%"/>
	    <control id="sliderRotate" name="horizontalSlider" width="200px" x="5%" y="40%"/>
	   	<control childLayout="center" id="buttonDelete" label="DELETE" name="button" width="150px" x="18%" y="80%">
        	<interact onClick="delete()"/>
        </control>
        <control childLayout="center" id="buttonReset" label="RESET" name="button" width="150px" x="18%" y="60%">
        	<interact onClick="reset()"/>
        </control>
      </panel>
      <panel childLayout="absolute" height="335px" id="legend" style="nifty-panel" width="253px" x="80%" y="3%">
      	<control font="aurulent-sans-16.fnt" height="50px" id="mountainText" name="label" text="mountain : left" width="100px" x="30%" y="15"/>
      	 <image filename="Interface/mountain.png" x="5%" y="18"></image>
        <control font="aurulent-sans-16.fnt" height="50px" id="valleyText" name="label" text="valley : rigth" width="100px" x="30%" y="60"/>
         <image filename="Interface/valley.png" x="5%" y="68"></image>
        <control font="aurulent-sans-16.fnt" height="50px" id="treeText" name="label" text="tree : 		1" width="100px" x="30%" y="105"/>
       		 <image filename="Interface/tree.png" x="5%" y="108"></image>
        <control font="aurulent-sans-16.fnt" height="50px" id="thiefText" name="label" text="thief : 		2" width="100px" x="30%" y="150"/>
        	 <image filename="Interface/thief.png" x="5%" y="153"></image>
        <control font="aurulent-sans-16.fnt" height="50px" id="diamondText" name="label" text="portal :		 4" width="100px" x="30%" y="240"/>
       		 <image filename="Interface/Portale.png" x="5%" y="248"></image>
        <control font="aurulent-sans-16.fnt" height="50px" id="enemyText" name="label" text="enemy : 		3" width="100px" x="30%" y="195"/>
        	 <image filename="Interface/enemy.png" x="5%" y="198"></image>
      </panel>
      <panel childLayout="absolute" height="20%" id="save" style="nifty-panel" width="253" x="80%" y="80%">
        <control childLayout="center" id="buttonSave" label="SAVE" name="button" width="150px" x="18%" y="80%">
        	<interact onClick="save()"/>
        </control>
        <control id="textfieldSave" name="textfield" width="80%" x="10%" y="40%"/>
        <control font="aurulent-sans-16.fnt" height="50px" id="labelNameSave" name="label" text="NAME" width="100px" x="30%" y="0"/>
      </panel>
     <panel childLayout="absolute" height="30%" id="load" style="nifty-panel" width="253" x="80%" y="48%">
     	 <control font="aurulent-sans-16.fnt" height="50px" id="labelNameLoad" name="label" text="FILE" width="100px" x="30%" y="0"/>  
     	 <control height="500px" id="listBox" name="listBox" width="200px"  displayItems= "4" x="10" y="40"/>
     	 <control childLayout="center" id="buttonLoad" label="LOAD" name="button" width="150px" x="18%" y="85%">
        	<interact onClick="load()"/>
        </control>
     </panel>
    </layer>
  </screen>
</nifty>
